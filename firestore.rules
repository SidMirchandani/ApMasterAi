
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can access their own subjects
    match /userSubjects/{subjectId} {
      allow read, write, create, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Users can read course data but not modify it
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should modify courses
    }
    
    // Users can access their own progress data
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can access their own test results
    match /testResults/{resultId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Public read access for subjects/categories
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if false; // Only admins should modify subjects
    }
    
    // Waitlist entries - users can only create, not read others
    match /waitlist/{entryId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
