{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true, // âœ… already helps with missing/buggy types
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false, // ðŸ”‘ set to false (avoids errors in Next.js)
    "jsx": "preserve",
    "incremental": true,
    "strict": false // ðŸ”‘ turn off strict mode
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "functions",
    "functions.bak",
    "apmaster",
    "**/*.bak",
    "**/*.bak/**"
  ]
}
